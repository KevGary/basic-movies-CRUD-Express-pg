<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>
    <form method="post" action="/">
      <input name="title" type="text" value="" placeholder="title">
      <input name="genre" type="text" placeholder="genre">
      <input name="year" type="text" placeholder="year">
      <input type="submit" name="submit" value="Submit">
      <input type="submit" name="deleteAll" value="Delete All">
    </form>

    <div class="movies-list">
      <% for(var i = 0; i < movies.length; i++) { %>
        <div class="movie-in-list">
          title: <%= movies[i].title %>
          genre: <%= movies[i].genre %>
          year: <%= movies[i].year %>
          <form method="post" action="/">
            <input type="submit" name="lookUp" value=<%= movies[i].id %> >
          </form>
        </div>
      <% } %>
    </div>
  </body>
</html>
